<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
    <br>
  </p>
  <p>
    <%= f.label :admin %><br>
    <%= f.check_box :admin %>
    <br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
